{
	"name": "scelteapp-typescript-go",
	"version": "0.1.0",
	"license": "MIT",
	"private": true,
	"scripts": {
		"setup": "npm i && npm prune",
		"setup-all": "npm run setup && echo \"Download Golang dependencies...\" && go get ./...",
		"upgrade": "npx npm-check-updates -u && npm run setup",
		"upgrade-all": "npx npm-check-updates -u && npm run setup && echo \"Update Golang dependencies...\" && go get -u ./...",
		"dev": "vite dev --open",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"build": "npx vite build",
		"build-all": "npm run build && echo \"Building Golang binary...\" && go build -buildvcs=false",
		"serve": "open-cli http://localhost:8080 && ./main",
		"serve-win": "open-cli http://localhost:8080 && main",
		"docker": "docker build . -t svelte-ts-go -f Dockerfile",
		"docker-run": "open-cli http://localhost:8080 && docker run -p 8080:8080 --rm svelte-ts-go",
		"commit": "npm run format && go fmt ./... && git pull origin master && git add . && git commit -m \"Updating\" && git push origin master"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.5",
		"@sveltejs/kit": "^1.3.9",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"npm-check-updates": "^16.6.3",
		"open-cli": "^7.1.0",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.3",
		"svelte-preprocess": "^5.0.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.0.4"
	},
	"type": "module",
	"dependencies": {
		"axios": "^1.3.1",
		"bootstrap": "^5.2.3"
	}
}
