{
	"name": "scelteapp-typescript-go",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"setup": "npm install && npm prune && go get ./... && go mod tidy",
		"upgrade-all": "npx npm-check-updates -u && npm install && npm prune",
		"dev": "vite dev",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"build": "vite build && go build .",
		"serve": "open-cli http://localhost:8080 && main",
		"start": "npm run setup && npm run build && npm run serve",
		"docker": "docker build . -t svelte-ts-go -f Dockerfile && open-cli http://localhost:8080 && docker run -p 8080:8080 --rm svelte-ts-go",
		"commit": "git pull origin master && git add . && git commit -m \"Updating\" && git push origin master"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.0-next.44",
		"@sveltejs/kit": "^1.0.0-next.516",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"npm-check-updates": "^16.3.11",
		"open-cli": "^7.1.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.8"
	},
	"type": "module",
	"dependencies": {
		"axios": "^1.1.3",
		"bootstrap": "^5.2.2"
	}
}
